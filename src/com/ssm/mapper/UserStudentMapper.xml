<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssm.dao.TUserStudentMapper">
	<resultMap type="com.ssm.pojo.TUser" id="UserMapper">
		<id property="id" column="id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="gender" column="gender" />
		<result property="birthday" column="birthday" />
		<result property="birthdays" column="birthday" />
		<result property="headPortrait" column="head_portrait" />
		<result property="clazzId" column="clazz_id" />
		<result property="createTime" column="create_time" />
		<result property="createTimes" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="updateTimes" column="update_time"/>
		<result property="lastLoginTime" column="last_login_time" />
		<result property="status" column="status" />
		<result property="salt" column="salt" />
	</resultMap>
	<!-- 查询学生 -->
	<select id="StudentSelect" resultMap="UserMapper">
		SELECT * FROM t_user u WHERE u.clazz_id=#{clazzId} AND u.status=1 ORDER BY id DESC
	</select>
	<!-- 学生删除 -->
	<update id="StudentDelete" parameterType="string">
		UPDATE t_user SET status=2 WHERE id=#{id}
	</update>
	<!-- 学生增加 -->
	<insert id="StudentAdd" parameterType="com.ssm.pojo.TUser">
		INSERT INTO 
			t_user
				(username, password, gender, birthday, clazz_id, create_time )
		VALUES
			(#{username},#{password},#{gender},#{birthdays},#{clazzId},#{createTimes})
	</insert>
	<!-- 查询教师 -->
	<select id="teacherSelect" resultMap="UserMapper">
		SELECT * FROM t_user WHERE clazz_id IS NULL;
	</select>
	<!-- 修改查询学生 -->
	<select id="updateSelect" resultMap="UserMapper">
		SELECT * FROM t_user WHERE id=#{id}
	</select>
	<update id="studentUpdate" parameterType="string">
		UPDATE 
			t_user 
			<set>
				<if test="username!=null and username!=''">
					username=#{username},
				</if>
				<if test="password!=null and password!=''">
					password=#{password},
				</if>
				<if test="gender!=null and gender!=''">
					gender=#{gender},
				</if>
				<if test="birthdays!=null and birthdays!=''">
					birthday=#{birthdays},
				</if>
				<if test="headPortrait!=null and headPortrait!=''">
					head_portrait=#{headPortrait},
				</if>
				<if test="clazzId!=null and clazzId!=''">
					clazz_id=#{clazzId},
				</if>
				<if test="updateTimes!=null and updateTimes!=''">
					update_time=#{updateTimes},
				</if>
			</set>
			WHERE id=#{id}
	</update>
</mapper>